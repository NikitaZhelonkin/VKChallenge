<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="AppTheme.Login">
        <item name="android:windowBackground">@drawable/login_bg</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="EditText.Post" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:hint">@string/post_hint</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:privateImeOptions">nm</item>
    </style>

    <style name="Theme.BottomSheetDialog.Stickers" parent="Theme.Design.Light.BottomSheetDialog"/>

    <style name="Animation.Popup" parent="Animation.Design.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

</resources>
