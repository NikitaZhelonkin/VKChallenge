<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:textViewStyle">@style/TextView</item>
    </style>

    <style name="AppTheme.Login">
        <item name="android:windowBackground">@drawable/login_bg</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="font">@string/font_roboto_medium</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="font">@string/font_roboto_regular</item>
    </style>

    <style name="EditText.Post" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="font">@string/font_roboto_bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:hint">@string/post_hint</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

    <style name="Theme.BottomSheetDialog.Stickers" parent="Theme.Design.Light.BottomSheetDialog"/>

    <style name="Animation.Popup" parent="Animation.Design.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="Theme.Dialog.Post" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog.Post</item>
    </style>

    <style name="Animation.Dialog.Post" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Widget.TabText" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">14sp</item>
        <item name="font">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/tab_text_color</item>
    </style>




</resources>
